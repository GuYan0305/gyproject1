@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<!DOCTYPE HTML>
<html>
<head>
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <title>注册界面</title>
    <style type="text/css">
        .gyrow {
            background-color: #dff6f0;
            opacity: 0.5; /*透明度*/
            box-shadow: 10px 10px 5px #808080;
            margin-left: 100px;
        }
        /*注册按钮*/
        .gybtn {
            border: 1px solid #297ca0;
            text-align: center;
            width: 100%;
            padding: 3px;
            font-size: 18px;
            background-color: #297ca0;
            border-radius: 20px;
            margin-bottom:20px;
        }
        
    </style>
</head>
<body>
    <h2>@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-md-4 gyrow">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>创建一个新账号</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email">邮箱：</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">密码：</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword">确认密码：</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
               
                <button class="gybtn" type="submit" class="btn btn-default">注册</button>
            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>
