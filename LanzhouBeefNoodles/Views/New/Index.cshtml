@model LanzhouBeefNoodles.Models.New
@{
    ViewData["Title"] = "Index";
}
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
<h2>添加新闻</h2>

<form asp-action="Index" method="post" class="form-horizontal" role="form">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Title" class="col-md-2 control-label">标题：</label>
        <div class="col-md-5">
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="CreateDateUTC" class="col-md-2 control-label">发布时间：</label>
        <div class="col-md-5">
            <input asp-for="CreateDateUTC" class="form-control" type="date" required/>
            <span asp-validation-for="CreateDateUTC" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Text" class="col-md-2 control-label">正文</label>
        <div class="col-md-5" style=" font-size:17px;">
            <textarea asp-for="Text" class="form-control"></textarea>
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="PictureUrl" class="col-md-2 control-label">图片：</label>
        <div class="col-md-5" style=" font-size:17px;">
            <textarea asp-for="PictureUrl" class="form-control"></textarea>
            <span asp-validation-for="PictureUrl" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="上传" />
        </div>
    </div>

</form>

