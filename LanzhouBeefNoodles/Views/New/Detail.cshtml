@model LanzhouBeefNoodles.Models.New
<!DOCTYPE HTML>
<html>
<head>
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <title>新闻详情</title>
    <style type="text/css">
        *{
            box-sizing:border-box;
        }
        .col-1 {
            width: 8.33%;
        }
        .col-2 {
            width: 16.66%;
        }
        .col-3 {
            width: 25%;
        }
        .col-4 {
            width: 33.33%;
        }
        .col-5 {
            width: 41.66%;
        }
        .col-6 {
            width: 50%;
        }
        .col-7 {
            width: 58.33%;
        }
        .col-8 {
            width: 66.66%;
        }
        .col-9 {
            width: 75%;
        }
        .col-10 {
            width: 83.33%;
        }
        .col-11 {
            width: 91.66%;
        }
        .col-12 {
            width: 100%;
        }
        [class*="col-"]{
            float:left;
            padding:15px;
        }
        .gyrow:after{
            content:"";
            clear:both;
            display:block;
        }
        /*标题*/
        #title{
            text-align:center;
        }
        /*正文+时间*/
        .gythumbnail{
            margin-top:20px;
            box-sizing:border-box;
            width:100%;
            background-color:#ffffff;
        }
        /*发布时间*/
        .gytime{
            margin-top:20px;
            text-align:center;
            
        }
        /*正文*/
        .gypre{
            line-height:1.5em;
            font-size:25px;
        }
        /*正文外围*/
        .gycap{
            margin-left:150px;
        }
        /*图片样式*/
        .gyimg{
            position:relative;
            
            max-width:50%;
        }
    </style>
</head>
<body>
    <div id="title">
        <h1>@Model.Title</h1>
    </div>

    <div class="gyrow gythumbnail">
        <h4 class="gytime">发布时间：@Model.CreateDateUTC</h4>
        <div class="gycap">
            <h3 class="col-11 gytext"><pre class="gypre">@Model.Text<img class="gyimg" src="@Model.PictureUrl" /></pre></h3>       
        </div>
    </div>
</body>
</html>




