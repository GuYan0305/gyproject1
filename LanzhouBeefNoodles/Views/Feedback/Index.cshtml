@model LanzhouBeefNoodles.Models.Feedback
@{
    ViewData["Title"] = "Index";
}
<!--52启用TagHelper，将asp-validation-for与ModelState连接->连接数据库AppDbcontext.cs-->
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

<!--40.->FeedbackController.cs创建post请求-->
<!DOCTYPE HTML>
<html>
<head>
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <title>提交反馈</title>
    <style type="text/css">

    </style>
</head>
<body>
    <div id="gyhead">
        <h2>提交反馈</h2>
    </div>
    <div id="gyform">
        <!--51.对每个数据显示错误提示： <span asp-validation-for="XXX" class="text-danger"></span>-->
        <form asp-action="Index" method="post" class="form-horizontal" role="form">
            <!--51.显示所有错误信息-->
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="col-md-2 control-label">姓名</label>
                <div class="col-md-5">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="col-md-2 control-label">Email</label>
                <div class="col-md-5">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="CreateDateUTC" class="col-md-2 control-label">时间</label>
                <div class="col-md-5">
                    <input asp-for="CreateDateUTC" class="form-control" type="date" required/>
                    <span asp-validation-for="CreateDateUTC" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Message" class="col-md-2 control-label">反馈意见</label>
                <div class="col-md-5">
                    <textarea asp-for="Message" class="form-control"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-5">
                    <input type="submit" class="btn btn-primary" value="提交意见" />
                </div>
            </div>

        </form>
    </div>
</body>
</html>
