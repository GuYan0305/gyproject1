@model LanzhouBeefNoodles.Models.Link
@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE HTML>
<html>
<head>
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <title>上传链接</title>
    <style type="text/css">
    </style>
</head>
<body>
    <div id="gyhead">
        <h2>上传链接</h2>
    </div>
    <div id="gyform">
        <!--51.对每个数据显示错误提示： <span asp-validation-for="XXX" class="text-danger"></span>-->
        <form asp-action="Index" method="post" class="form-horizontal" role="form">
            <!--51.显示所有错误信息-->
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Title" class="col-md-2 control-label">链接标题</label>
                <div class="col-md-5">
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Url" class="col-md-2 control-label">链接URL</label>
                <div class="col-md-5">
                    <input asp-for="Url" class="form-control" />
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-5">
                    <input type="submit" class="btn btn-primary" value="提交" />
                </div>
            </div>

        </form>
    </div>
</body>
</html>

