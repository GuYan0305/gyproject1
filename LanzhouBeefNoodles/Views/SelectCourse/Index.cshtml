@model LanzhouBeefNoodles.ViewModels.HomeViewModel
<!DOCTYPE HTML>
<html>
<head>
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <title></title>
    <style type="text/css">
        .gyhead {
            margin-left: 50px;
            margin-top: 50px;
        }

        /*表格样式*/
        .gytable {
            margin-left: 50px;
            margin-top: 20px;
            border: 1px solid #232020;
            border-collapse: collapse;
        }

            .gytable th, td {
                padding: 3px;
                border: 1px solid #232020;
                text-align: center;
            }

                .gytable th, td:not(.one) {
                    width: 160px;
                }

            .gytable a {
                text-decoration: none;
                color: #464159;
                font-size: 17px;
                display: inline-block;
                width: 60px;
            }

                .gytable a:hover {
                    color: #a11792;
                    background-color: #f2f2f2;
                }
    </style>
</head>
<body>
    <div class="gyhead">
        <h2>课程列表</h2>
        <a asp-controller="Admin0" asp-action="Index">管理中心</a>
        <a asp-controller="Course" asp-action="Index">添加课程</a>
    </div>
    <hr />
    <table class="gytable">
        <tr>
            <th class="one"><h4>课程名</h4></th>
            <th><h4>总课时</h4></th>
            <th><h4>更新时间</h4></th>
            <th><h4>视频URL</h4></th>
            <th><h4>操作</h4></th>
        </tr>
        @foreach (var video in Model.LearningVideos)
        {
        <tr>
            <td class="one">@video.CourseID</td>
            <td>@video.Duration</td>
            <td>@video.UpdateTime</td>
            <td>@video.Url</td>
            <td>
                <a href="/selectcourse/DeleteCourse/@video.ID">删除</a>
                <a href="/selectcourse/Update/@video.ID">修改</a>
            </td>
        </tr>
        }
    </table>

</body>
</html>








