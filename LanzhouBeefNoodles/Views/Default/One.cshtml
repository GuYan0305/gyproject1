    <style type="text/css">
        /*网格布局*/
        * {
            box-sizing: border-box;
        }

        .col-1 {
            width: 8.33%;
        }

        .col-2 {
            width: 16.66%;
        }

        .col-3 {
            width: 25%;
        }

        .col-4 {
            width: 33.33%;
        }

        .col-5 {
            width: 41.66%;
        }

        .col-6 {
            width: 50%;
        }

        .col-7 {
            width: 58.33%;
        }

        .col-8 {
            width: 66.66%;
        }

        .col-9 {
            width: 75%;
        }

        .col-10 {
            width: 83.33%;
        }

        .col-11 {
            width: 91.66%;
        }

        .col-12 {
            width: 100%;
        }

        [class*="col-"] {
            float: left;
            padding: 15px;
        }

        .row:after {
            content: "";
            clear: both;
            display: block;
        }

        #myCarousel {
            z-index: 0;
            background-color: #3c70a4;
        }
        /*轮播图片的样式*/
        .item {
            height: 450px;
            text-align: center;
            padding: 0;
        }

            .item img {
                z-index: -1;
                width: 100%;
                height: 450px;
            }
        /*轮播上的标题*/
        .gytitle {
            z-index: 1;
            width: 500px;
            height: 60px;
            position: absolute;
            top: 30px;
            left: 50px;
            color: #fff;
        }

            .gytitle h2 {
                text-shadow: 5px 5px 3px #999;
            }
        /*查看校历*/
        #sc {
            z-index: 1;
            position: absolute;
            right: 50px;
            top: 50px;
            width: 300px;
            height: 50px;
        }

            #sc > a {
                color: #ffffff;
                font-weight: bold;
                text-decoration: none;
            }

                #sc > a:hover {
                    color: #cf56a1;
                }

        #time {
            margin-left: 5px;
            color: white;
        }
        /*导航栏*/
        .gynav {
            z-index: 1;
            position: absolute;
            right: 50px;
            top: 100px;
        }

            .gynav ul {
                list-style-type: none;
                margin: 0;
                padding: 0;
            }

            .gynav li {
                float: left;
            }

            .gynav a {
                display: block;
                width: 120px;
                text-decoration: none;
                color: #fdecff;
                font-size: 17px;
                text-align: center;
                padding: 3px 0;
            }

                .gynav a:hover {
                    color: #561f55;
                    background-color: white;
                }
        /*面板样式*/
        #gypanel {
            padding-left: 30px;
        }

        #myPanel1 {
            position: absolute;
            left: 80px;
            height: 330px;
        }

        #myPanel2 {
            position: absolute;
            left: 730px;
            height: 330px;
        }

        #gypanel a {
            display: block;
            text-decoration: none;
            font-size: 15px;
            color: #666;
            padding: 8px 0;
            border-bottom: 1px solid #999;
        }

            #gypanel a:hover {
                color: #03C;
            }

            #gypanel a:active {
                color: #63C;
            }

        .panel-body {
            overflow: auto;
        }

        media only screen (max-width:768px) {
            [id*="mypanel"]

        {
            width: 100%;
        }

        }
        /*底部*/
        .gybottom {
            margin-top: 50px;
            background-color: #211717;
            opacity: 0.3;
            position: absolute;
            top: 900px;
            height: 80px;
            z-index: 0;
            text-align: center;
            font-weight: bold;
        }

            .gybottom a, p {
                z-index: 1;
                color: #fff;
                font-size: 16px;
            }

            .gybottom a {
                margin-left: 25px;
            }

            .gybottom p {
                margin-top: 10px;
            }

            .gybottom a:hover {
                background-color: #FFF;
                color: #5d1451;
            }
    </style>
    <!--显示时间-->
    <script type="text/javascript">
        function clock() {
            var obj = document.getElementById("time");
            var today = new Date();
            var weeks = ["星期日", "星期一", "星期二", "星期三", "星期四", "星期五", "星期六"];
            var num = today.getDay();

            obj.innerHTML = "|&nbsp;" + today.getFullYear() + "-" + (today.getMonth() + 1) + "-" + today.getDate() + "&nbsp;" + today.getHours() + ":" + today.getMinutes() + ":" + today.getSeconds() + "&nbsp" + weeks[num] + "<br>";
        }
        setInterval(clock, 1000);
    </script>
</head>
<body>
    <!--轮播作为背景-->
    <div id="myCarousel" class="carousel slide">
        <!--信控学院标及导航栏题-->
        <div class="row">
            <div class="col-3 gytitle">
                <h2>信息与控制工程学院网络工程</h2>
            </div>
            <!--导航栏-->
            <div class="col-9">
                <div id="sc">
                    <a href="~/images/schoolCalender.jpg" title="校历" target="_blank">查看校历&nbsp;</a>
                    <span id="time"></span>
                </div>
                <!--水平导航栏（无边框）-->
                <div class="gynav">
                    <ul class="gyli">
                        <li><a asp-controller="Default" asp-action="Academy">学院介绍</a></li>
                        <li><a asp-controller="Default" asp-action="Major">专业介绍</a></li>
                        <li><a asp-controller="Home" asp-action="StudentIndex">学生服务</a></li>
                        <li><a asp-controller="Admin0" asp-action="Index">网站管理</a></li>
                    </ul>

                </div>

            </div>
        </div>
        <!--放导航栏-->
        <!--轮播指标-->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="1" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
            <li data-target="#myCarousel" data-slide-to="4"></li>
            <li data-target="#myCarousel" data-slide-to="5"></li>
        </ol>
        <!--轮播项目-->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/images/ablity_background.png" alt="图片加载失败" />
            </div>
            <div class="item">
                <img src="~/images/gy02.png" alt="图片加载失败" />
            </div>
            <div class="item">
                <img src="~/images/gy001.jpg" alt="图片加载失败" />
            </div>
            <div class="item">
                <img src="~/images/gy004.jpg" alt="图片加载失败" />
            </div>
            <div class="item">
                <img src="~/images/gy05.png" alt="图片加载失败" />
            </div>
        </div>
        <!-- 轮播（Carousel）导航 -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <hr />
    <!--面板-->
    <div class="row" id="gypanel">
        <div class="panel panel-info col-5" id="myPanel1">
            <div class="panel-heading">
                <h2 class="panel-title">新闻</h2>
            </div>
            <div class="panel-body">
                @foreach (var news in Model.News)
                {
                    <div>
                        <a asp-controller="New" asp-action="Detail" asp-route-id="@news.Id">@news.Title</a>
                    </div>
                }
            </div>
        </div>
        <div class="panel panel-info col-5" id="myPanel2">
            <div class="panel-heading">
                <h2 class="panel-title">公告</h2>
            </div>
            <div class="panel-body">
                @foreach (var notice in Model.Notices)
                {
                    <div>
                        <a asp-controller="Notice" asp-action="Detail" asp-route-id="@notice.Id">@notice.Title</a>
                    </div>
                }
            </div>
        </div>
    </div>
    <!--底部-->
    <div class="row gybottom col-12">
        <a href="http://mail.qut.edu.cn/" target="_blank"><span class="glyphicon glyphicon-envelope">电子邮箱</span></a>
        <a href="http://oa.qut.edu.cn/" target="_blank"><span class="glyphicon glyphicon-phone-alt">办公系统</span></a>
        <a href="http://info.qut.edu.cn/" target="_blank"><span class="	glyphicon glyphicon-globe">信息公开网</span></a>
        <a href="http://lib.qtech.edu.cn/" target="_blank"><span class="glyphicon glyphicon-book">图书馆</span></a>
        <p>Copyright 2019-12-13 GuYan 版权所有</p>
    </div>

   

</body>
</html>


