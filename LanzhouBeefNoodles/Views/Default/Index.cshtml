<!DOCTYPE HTML>
<html>
<head>
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <title>学生反馈</title>
    <style type="text/css">
        * {
            box-sizing: border-box;
        }

        .col-1 {
            width: 8.33%;
        }

        .col-2 {
            width: 16.66%;
        }

        .col-3 {
            width: 25%;
        }

        .col-4 {
            width: 33.33%;
        }

        .col-5 {
            width: 41.66%;
        }

        .col-6 {
            width: 50%;
        }

        .col-7 {
            width: 58.33%;
        }

        .col-8 {
            width: 66.66%;
        }

        .col-9 {
            width: 75%;
        }

        .col-10 {
            width: 83.33%;
        }

        .col-11 {
            width: 91.66%;
        }

        .col-12 {
            width: 100%;
        }

        [class*="col-"] {
            float: left;
            padding: 15px;
        }

        .gyrow:after {
            content: "";
            clear: both;
            display: block;
        }

        .page-header {
            margin-left: 100px;
        }
        /*列表背景*/
        .gyback {
            background-color: #f5f5f5;
            margin-left: 150px;
        }

        /*意见反馈列表*/
        .gylist {
            margin: 35px;
        }

            .gylist p {
                margin-top: 30px;
                font-size: 15px;
                font-weight: bold;
            }
    </style>
</head>
<body>
    <div class="gyrow col-12 page-header">
        <h2>意见反馈</h2>
    </div>
    <div class="gyrow col-9 gyback">
        <div class="gyrow gylist list-group">
            @foreach (var feedback in Model.Feedbacks)
            {
                <a class="list-group-item">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="list-group-item-heading">@feedback.Name</h5>
                        <small class="pull-left">@feedback.CreateDateUTC</small>
                    </div>
                    <p class="list-group-item-text">@feedback.Message</p>
                </a>
            }
        </div>

    </div>

</body>
</html>




