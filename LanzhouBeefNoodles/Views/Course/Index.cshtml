@model LanzhouBeefNoodles.Models.LearningVideo
@{
    ViewData["Title"] = "Index";
}
<!--52启用TagHelper，将asp-validation-for与ModelState连接->连接数据库AppDbcontext.cs-->
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

<!--40.->FeedbackController.cs创建post请求-->
<!DOCTYPE HTML>
<html>
<head>
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <title></title>
    <style type="text/css">
    </style>
</head>
<body>
    <div id="gyhead">
        <h2>上传课程及视频</h2>
    </div>
    <div id="gyform">
        <!--51.对每个数据显示错误提示： <span asp-validation-for="XXX" class="text-danger"></span>-->
        <form asp-action="Index" method="post" class="form-horizontal" role="form">
            <!--51.显示所有错误信息-->
            <div asp-validation-summary="All" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="CourseID" class="col-md-2 control-label">课程名</label>
                <div class="col-md-5">
                    <input asp-for="CourseID" class="form-control" type="text" required/>
                    <span asp-validation-for="CourseID" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Teacher" class="col-md-2 control-label">教师姓名</label>
                <div class="col-md-5">
                    <input asp-for="Teacher" class="form-control" type="text" required/>
                    <span asp-validation-for="Teacher" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Duration" class="col-md-2 control-label">总课时</label>
                <div class="col-md-5">
                    <input asp-for="Duration" class="form-control" type="number" required/>
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="UpdateTime" class="col-md-2 control-label">更新时间</label>
                <div class="col-md-5">
                    <input asp-for="UpdateTime" class="form-control" type="date" required/>
                    <span asp-validation-for="UpdateTime" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Url" class="col-md-2 control-label">视频URL</label>
                <div class="col-md-5">
                    <input asp-for="Url" class="form-control" type="url" required/>
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-5">
                    <input type="submit" class="btn btn-primary" value="上传" />
                </div>
            </div>

        </form>
    </div>
</body>
</html>


